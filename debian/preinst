#!/bin/sh
# preinst script for merge-o-matic
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    if ! getent group | grep "^mom:" &> /dev/null; then
        /usr/sbin/addgroup --system --quiet mom
    fi
    if ! getent passwd | grep "^mom:" &> /dev/null; then
        /usr/sbin/adduser --system --quiet \
            --ingroup mom --shell /bin/false \
            --home /srv/obs/merge-o-matic \
            --no-create-home mom
        /usr/sbin/usermod -c "Merge-o-Matic" mom
    fi
    # If OBS creates this directory, it'll be owned by obsrun,
    # and we don't want to override that; so only create it if it
    # doesn't exist.
    test -d /srv/obs || install -d -m755 /srv/obs
    install -d -m755 -omom -gmom /srv/obs/merge-o-matic
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
